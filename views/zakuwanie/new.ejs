<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 10%">
            <div id="form1">
                <a href="/">
                    <i class="fas fa-arrow-left"></i>
                    Wróć do strony głównej
                </a>
                <h1 class="login">Dodaj podstronę Zakuwanie przewodów</h1>
                <% if(error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
                <% } %>
                <form action="/zakuwanie" method="post" enctype="multipart/form-data">
                    <p class="username">Wpisz tytuł podstrony</p>
                    <input type="text" name="title" placeholder="Tytuł podstrony" class="form-control">
                    <br>
                    <p class="username">Wpisz opis co oferujemy</p>
                    <textarea class="form-control" name="offer" id="description"
                        placeholder="Opis co oferujemy"></textarea>
                    <br>
                    <p class="username">Zdjęcie główne</p>
                    <input type="file" name="profile" style="color:white">
                    <br>
                    <br>
                    <input type="submit" class="btn btn-warning button btn-gradient" value="Dodaj podstronę">
                </form>

            </div>
        </div>
    </div>
</div>
</body>
</html>