<% include ../partials/headero %>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card" style="border: #1a1a1a">
                <div class="card-body" style="background-color: #1a1a1a">
                    <div class="card-title info text-center">Edytuj <%= news.title %></div>
                    <form action="/news/<%= news._id %>?_method=PUT" method="post">
                        <p class="info2">Edytuj tytuł aktualności</p>
                        <input type="text" name="news[title]" placeholder="Tytuł aktualności" value="<%= news.title %>" class="form-control">
                        <br>
                        <p class="info2">Edytuj opis aktualności</p>
                        <textarea class="form-control" name="news[opis]" placeholder="Opis aktualności" id="description"><%= news.opis %></textarea>
                        <br>
                        
                        <br>
                        <input type="submit" class="info2" value="Edytuj aktualność" style="background: none; border: 1px solid #FBFA04; padding: 10px; border-radius: 0.3em;font-size: 15px;">
                    </form>
					<br>
                        <ul class="info2">
                            Poradnik formatowania tekstu:
                            <li>pogrubienie -  <pre style="color:#FBFA04"> <code> <span> &lt;strong&gt; wyraz lub wyrażenie &lt;/strong&gt; </span> </code>  </pre></li>
                            <li>pochylenie -  <pre style="color:#FBFA04"> <code> <span> &lt;em&gt; wyraz lub wyrażenie &lt;/em&gt; </span> </code>  </pre></li>
                            <li>podkreślenie -  <pre style="color:#FBFA04"> <code> <span> &lt;ins&gt; wyraz lub wyrażenie &lt;/ins&gt; </span> </code>  </pre></li>
                            <li>przekreślenie -  <pre style="color:#FBFA04"> <code> <span> &lt;del&gt; wyraz lub wyrażenie &lt;/del&gt; </span> </code>  </pre></li>
                            <li>akapity -  <pre style="color:#FBFA04"> <code> <span> &lt;br&gt; </span> </code>  </pre></li>
                        </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>