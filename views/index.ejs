<% include ./partials/header %>
<br>
<div class="container">

	<div class="row">
		<div class="col-lg-12">
			<div class="card" style="border: #1a1a1a">
				<div class="card-body" style="background-color: #1a1a1a">
					<div class="card-title info"><i class="fas fa-tools"></i> Prowadzimy usługę zakuwania przewodów
						hamulcowych</div>
					<p class="info2">Wykonujemy następujące przewody hamulcowe zgodne z D.O.T:</p>
					<ul>
						<li class="info2">Miedziane i miedziano-niklowe</li>
						<li class="info2">Gumowe 1/8 DN z podwójnym zbrojeniem z włókna syntetycznego Sae J1401</li>
						<li class="info2">Teflonowe 1/8 DN w oplocie ze stali nierdzewnej</li>
					</ul>
					<p class="info2">Wszystkie przewody są atestowane i wykonane zgodnie z międzynarodowymi
						normami. Jesteśmy oficjalnym partnerem amerykańskiego producenta
						węży i końcówek hamulcowych Brake Quip.
					</p>
				</div>
			</div>
		</div>
	</div>
</div>
<br>
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="info text-center">Najnowsze aktualności</h1>
		</div>


	</div>
	<% if(error.length > 0){ %>
	<div class="row">
		<div class="col-lg-12">
			<div class="alert alert-danger" role="alert">
				<%= error %>
			</div>
		</div>
	</div>

	<% } %>
	<% if(success.length > 0){ %>
	<div class="row">
		<div class="col-lg-12">
			<div class="alert alert-success" role="alert">
				<%= success %>
			</div>
		</div>
	</div>

	<% } %>


	<% if(news.length===0){ %>
	<div class="row">
		<div class="col-lg-12">
			<p class="neutral text-center">Nie mamy nowinek</p>
		</div>
	</div>


	<% } else { %>
	<div class="row">
		<% for(let i=news.length-1;i>news.length-4;i--){ %>
		<div class="col-lg-4 col-md-6 col-sm-12" style="margin-top: 8px">
			<div class="card" style="border: #1a1a1a;background-color: #1a1a1a">

				<% if(typeof news[i].profile !== 'undefined'){ %>
					<img src="<%= news[i].profile %>" alt="<%= news[i].title %> zdjęcie główne" class="card-img-top">
				<% } %>


				<div class="card-body" style="background-color: #1a1a1a">\
					<div class="card-title info text-center">
						<a href="/news/<%= news[i].more %>" style="color:#FBFA04"><%= news[i].title %></a>
					</div>
					
					<% if(news[i].opis.length>200){ %>
						<% if(typeof news[i].more !== 'undefined'){ %>
							<p class="neutral"><%- news[i].opis.substring(0,200) %>...</p>
							<a href="/news/<%= news[i].more %>" class="form">Czytaj więcej...</a>
						<% } else { %>
							<p class="neutral"><%- news[i].opis.substring(0,200) %></p>
							<a href="/news/<%= news[i]._id %>" class="form">Czytaj więcej...</a>
						<% } %>

					<% } else { %>
						<p class="neutral"><%- news[i].opis %></p>
					<% } %>
				</div>
			</div>
		</div>
		<% } %>
	</div>
	<% } %>


</div>


<% include ./partials/footer %>